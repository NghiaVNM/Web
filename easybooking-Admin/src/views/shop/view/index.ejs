<div class="untree_co-section product-section before-footer-section">
<div class="container">
    <div class="row">
        <!-- Start Column 1 -->
        
        <!-- End Column 1 -->

        <% data.forEach((item) => { %>
            <div class="col-12 col-md-4 col-lg-4 mb-5">
                <a class="product-item" href="/shop/detail/<%= item._id%>/<%= item.salerID%>">
                    <img src="/<%= item.image%>" class="img-fluid product-thumbnail">
                    <span><%= item.productinformation[0].brand%></span>
                    <h3 class="product-title"><%= item.name%></h3>
                    <div class="star">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="d-flex justify-content-center mt-3 mb-3 gap-3">
                        <div class="px-2">
                            <i class="fa fa-solid fa-motorcycle text-primary mr-1" style="font-size: 20px;"></i>
                            <span style="font-size: 20px;"><%= item.productinformation[0].brand%></span>
                        </div>
                        <div class="px-2">
                            <i class="fa fa-cogs text-primary mr-1" style="font-size: 20px;"></i>
                            <span style="font-size: 20px;"><%= item.category%></span>
                        </div>
                        <div class="px-2">
                            <i class="fa fa-road text-primary mr-1" style="font-size: 20px;"></i>
                            <span style="font-size: 20px;"><%= item.productinformation[0].odo%>km</span>
                        </div>
                    </div>
                    <div class="px-2 mb-3" style="align-items: center; display: flex; justify-content: center;">
                        <i class="fa-solid fa-location-dot text-primary mr-1" style="font-size: 20px;"></i>
                        <span style="font-size: 20px;"><%= item.address[0].city%></span>
                    </div>
                    <div class="text-center">
                        <strong class="product-price btn btn-primary px-3"><%= item.price%>₫/ 1 ngày</strong>
                    </div>
                </a>
            </div>
          <% });  %>
     
    </div>
</div>
</div>